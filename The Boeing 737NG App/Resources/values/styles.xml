<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="Theme.BoeingTheme" parent="Theme.BoeingTheme.Base">
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="Theme.BoeingTheme.Base" parent="Theme.AppCompat">
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
    <!-- colorPrimary is used for the default action bar background -->
    <!--<item name="colorPrimary">@color/primary</item>
     colorPrimaryDark is used for the status bar -->
    <!--<item name="colorPrimaryDark">@color/primaryDark</item>
     colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->


    <item name="windowActionModeOverlay">true</item>
    
    <!-- <item name="colorAccent">@color/accent</item>
    You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    
    <!-- Option to hide the drop shadow here
    
      <item name="actionBarStyle">@style/Theme.MyTheme.ActionBar</item>
      <item name="android:windowContentOverlay">@null</item>
    -->
    <item name="colorPrimary">@color/blueGrey800</item>
    <item name="colorPrimaryDark">@color/blueGrey900</item>
    <item name="colorAccent">@color/blueGrey400</item>
    <item name="android:textColorPrimary">@color/blueGrey50</item>
    <item name="android:windowBackground">@color/blueGrey700</item>
    <item name="drawerArrowStyle">@style/BoeingDrawerArrowStyle</item>
    <item name="android:windowBackground">@color/blueGrey700</item>
    <item name="android:alertDialogTheme">@style/RedDialogTheme</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="actionModeBackground">@color/blueGrey800</item>
  </style>

  <style name="BoeingDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="color">@color/blueGrey50</item>
    <item name="spinBars">true</item>
  </style>

  <style name="Theme.BoeingTheme.ActionBar" parent="style/Widget.AppCompat.Light.ActionBar.Solid">
    <!-- remove shadow below action bar -->
    <!-- <item name="android:elevation">0dp</item> -->
    <!-- Support library compatibility -->
    <item name="elevation">0dp</item>
  </style>
  <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@xml/splash</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsTranslucent">false</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:statusBarColor">@color/blueGrey900</item>
    <item name="android:navigationBarColor">@color/blueGrey700</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:gravity">fill</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="actionModeBackground">@color/blueGrey800</item>
  </style>

  <style name="RedDialogTheme" parent="@android:style/Theme.Material.Dialog">
    <item name="android:buttonBarButtonStyle">@style/RedDialogTheme.DialogButton</item>
    <item name="android:textColor">@color/red100</item>
    <item name="android:textColorPrimary">@color/red100</item>
    <item name="android:textColorTertiary">@color/red100</item>
    <item name="android:background">@color/redA700</item>
  </style>
  <style name="RedDialogTheme.DialogButton" parent="@android:style/TextAppearance.Material.Button">
    <item name="android:textColor">@color/redA700</item>
    <item name="android:background">@color/red100</item>
  </style>
  
  <style name="BrakeTypeSwitchTheme" parent="Theme.AppCompat">
    <item name="colorControlActivated">#212121</item>
    <item name="colorSwitchThumbNormal">#4682b4</item>    
    <item name="android:colorForeground">@color/blueGrey100</item>
    </style>
<style name="InFlightSwitchTheme" parent="Theme.AppCompat">
    <item name="colorControlActivated">#0065cc</item>
    <item name="colorSwitchThumbNormal">#653300</item>    
    <item name="android:colorForeground">@color/blueGrey100</item>
    </style>
<style name="ReverseSwitchTheme" parent="Theme.AppCompat">
    <item name="colorControlActivated">#00ff00</item>
    <item name="colorSwitchThumbNormal">#ff0000</item>    
    <item name="android:colorForeground">@color/blueGrey100</item>
    </style>
</resources>